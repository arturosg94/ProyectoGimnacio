
@{
    ViewBag.Title = "Maquinas";
}

<h2>Maquinas</h2>

<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <h4 class="panel-title">Registros de Maquinas</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            @*<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>*@
        </div>
    </div>
    <!-- end panel-heading -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <div id="data-table-default_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    @*<div class="dataTables_length" id="data-table-default_length">
                        <label>
                            Show
                            <select name="data-table-default_length" aria-controls="data-table-default" class="custom-select custom-select-sm form-control form-control-sm">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select> entries
                        </label>
                    </div>*@
                </div>
                <div class="col-sm-12 col-md-4">
                    @*<div id="data-table-default_filter" class="dataTables_filter">
                        <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="data-table-default"></label>
                    </div>*@
                </div>
                <div class="col-sm-6 col-md-2">
                    <a class="btn btn-sm btn-success" data-toggle="modal"  style="margin-bottom: 15px;" id="btn_agregar">AGREGAR</a>
                </div>
                <!-- modal agregar -->
                <div class="modal show" id="modal_agregarmaquina">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Agregar Maquina</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Nombre</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txt_nombre" class="form-control m-b-5" placeholder="Ingresar el nombre de la maquina">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Fabricante</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txt_fabricante" class="form-control m-b-5" placeholder="Ingresar el nombre del fabricante">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btn_guardar" class="btn btn-green">GUARDAR</button>
                                <button type="button" id="btn_modificar" class="btn btn-green">ACTUALIZAR</button>
                                <a href="javascript:;" class="btn btn-white" data-dismiss="modal">CANCELAR</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- fin modal -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table id="tabla_maquina" class="table table-striped table-bordered table-td-valign-middle dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="data-table-default_info" style="/* width: 1568px; */">
                        <thead>
                            <tr role="row">
                                <th width="1%" class="sorting_asc" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1" aria-sort="ascending"></th>
                                <th width="40%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">NOMBRE</th>
                                <th width="49%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1" style="width: 264px;" aria-label="Rendering engine: activate to sort column ascending">FABRICANTE</th>
                                <th width="10%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end panel-body -->
</div>
@section links{
    <link href="~/Content/assets/plugins/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/assets/plugins/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/scripts/Script_Maquina.js"></script>
}





@{
    ViewBag.Title = "Rutina";
}

<h2>Rutina</h2>

<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <h4 class="panel-title">Data Table - Default</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            @*<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>*@
        </div>
    </div>
    <!-- end panel-heading -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <div id="data-table-default_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-5 col-md-10">
                </div>
                <div class="col-sm-6 col-md-2">
                    <a id="btn_agregar" class="btn btn-sm btn-success" data-toggle="modal" style="margin-bottom: 15px;">AGREGAR</a>
                </div>
                <!-- modal agregar -->
                <div class="modal show" id="modal_rutina">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Agregar Rutina</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Nombre</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control m-b-5" id="txt_nombre" placeholder="Ingresar el nombre de la Rutina">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">NivelRutina</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-nivelrutina">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">TipoRutina</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-tiporutina">
                                        </select>
                                    </div>
                                </div>
                                <hr class="wide">
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">EjercicioFisico</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-ejerciciofisico">
                                        </select>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="button" class="btn btn-green m-r-5 m-b-5" id="btn_agregardetalle">+</button>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">#Series</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control m-b-5 solo-numeros" placeholder="# de series" id="txt_series">
                                    </div>
                                    <label class="col-form-label col-md-3">#Repeticiones</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control m-b-5 solo-numeros" placeholder="# de repeticiones" id="txt_repeticiones">
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Peso</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control m-b-5 solo-numeros" placeholder="Kg." id="txt_peso">
                                    </div>
                                    <label class="col-form-label col-md-3">Descanso</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control m-b-5 solo-numeros" placeholder="seg." id="txt_descanso">
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <div class="table-responsive">
                                        <table class="table m-b-0" id="tabla_detalle">
                                            <thead>
                                                <tr>
                                                    <th>EjercicioFisico</th>
                                                    <th>Series</th>
                                                    <th>Rep.</th>
                                                    <th>Peso</th>
                                                    <th>Desc.</th>
                                                    <th>Opc.</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btn_guardar" class="btn btn-green">GUARDAR</button>
                                <button type="button" id="btn_modificar" class="btn btn-green">ACTUALIZAR</button>
                                <a href="javascript:;" class="btn btn-white" data-dismiss="modal">CANCELAR</a>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- fin modal -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table id="tabla_rutina" class="table table-striped table-bordered table-td-valign-middle dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="data-table-default_info" style="/* width: 1568px; */">
                        <thead>
                            <tr role="row">
                                <th width="1%" class="sorting_asc" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    Rutina
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    NivelRutina
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    TipoRutina
                                </th>
                                <th width="15%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                    Opciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end panel-body -->
</div>

@section links{
    <link href="~/Content/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/assets/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/scripts/Script_Rutina.js"></script>
}










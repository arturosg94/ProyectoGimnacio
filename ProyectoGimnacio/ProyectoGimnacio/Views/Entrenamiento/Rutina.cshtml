

@{
    ViewBag.Title = "Rutina";
}

<h2>Rutina</h2>

<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <h4 class="panel-title">Data Table - Default</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            @*<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>*@
        </div>
    </div>
    <!-- end panel-heading -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <div id="data-table-default_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-11 col-md-11">
                </div>
                <div class="col-sm-1 col-md-1 m-b-15">
                    <a href="#modal-without-animation" class="btn btn-sm btn-success" data-toggle="modal">AGREGAR</a>
                </div>
                <!-- modal agregar -->
                <div class="modal show" id="modal-without-animation">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Agregar Rutina</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Nombre</label>
                                    <div class="col-md-9">
                                        <input type="email" class="form-control m-b-5" placeholder="Ingresar el nombre de la Rutina">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">NivelRutina</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-nivelrutina">
                                            <option>Facil</option>
                                            <option>Intermedio</option>
                                            <option>Dificil</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">TipoRutina</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-tiporutina">
                                            <option>Funcional</option>
                                            <option>Fuerza</option>
                                            <option>Resistencia</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">EjercicioFisico</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-ejerciciofisico">
                                            <option>Planchas</option>
                                            <option>Sentadillas</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="button" class="btn btn-green m-r-5 m-b-5">+</button>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-2">#Series</label>
                                    <div class="col-md-2">
                                        <input type="email" class="form-control m-b-5" placeholder="Series">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                    <label class="col-form-label col-md-2">#Repeticiones</label>
                                    <div class="col-md-2">
                                        <input type="email" class="form-control m-b-5" placeholder="Repeticiones">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                    <label class="col-form-label col-md-2">Peso</label>
                                    <div class="col-md-2">
                                        <input type="email" class="form-control m-b-5" placeholder="Peso">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <div class="table-responsive">
                                        <table class="table m-b-0">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>EjercicioFisico</th>
                                                    <th>#Series</th>
                                                    <th>#Repeticiones</th>
                                                    <th>Peso</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="table-active">
                                                    <td>1</td>
                                                    <td>Plancha</td>
                                                    <td>4</td>
                                                    <td>20</td>
                                                    <td>70</td>
                                                </tr>
                                                <tr class="table-info">
                                                    <td>2</td>
                                                    <td>Sentadillas</td>
                                                    <td>4</td>
                                                    <td>20</td>
                                                    <td>60</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-green">GUARDAR</button>
                                <a href="javascript:;" class="btn btn-white" data-dismiss="modal">CANCELAR</a>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- fin modal -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table id="data-table-default" class="table table-striped table-bordered table-td-valign-middle dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="data-table-default_info" style="/* width: 1568px; */">
                        <thead>
                            <tr role="row">
                                <th width="1%" class="sorting_asc" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    Rutina
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    NivelRutina
                                </th>
                                <th width="14%" data-orderable="false" class="sorting_disabled" rowspan="1" colspan="1" aria-label="">
                                    TipoRutina
                                </th>
                                <th width="14%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                    EjercicioFisico
                                </th>
                                <th width="14%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                    #Series
                                </th>
                                <th width="14%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                    #Repeticiones
                                </th>
                                <th width="15%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">
                                    Peso
                                </th>
                                <th width="15%" class="text-nowrap sorting" tabindex="0" aria-controls="data-table-default" rowspan="1" colspan="1">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="gradeX odd" role="row">
                                <td>1</td>
                                <td>Rutina1</td>
                                <td>Facil</td>
                                <td>Perder Grasa</td>
                                <td>Plancha</td>
                                <td>4</td>
                                <td>20</td>
                                <td>70</td>
                                <td><button type="button" class="btn btn-xs btn-danger m-r-5 m-b-5"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                            <tr class="gradeX odd" role="row">
                                <td>2</td>
                                <td>Rutina2</td>
                                <td>Medio</td>
                                <td>Ganar masa muscular</td>
                                <td>Sentadillas</td>
                                <td>4</td>
                                <td>20</td>
                                <td>60</td>
                                <td><button type="button" class="btn btn-xs btn-danger m-r-5 m-b-5"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                            <tr class="gradeX odd" role="row">
                                <td>3</td>
                                <td>Rutina3</td>
                                <td>Dificil</td>
                                <td>Ganara masa muscular</td>
                                <td>3</td>
                                <td>15</td>
                                <td>15</td>
                                <td>60</td>
                                <td><button type="button" class="btn btn-xs btn-danger m-r-5 m-b-5"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-5">
                    @*<div class="dataTables_info" id="data-table-default_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>*@
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="data-table-default_paginate">
                        <ul class="pagination">
                            <li class="paginate_button page-item previous disabled" id="data-table-default_previous">
                                <a href="#" aria-controls="data-table-default" data-dt-idx="0" tabindex="0" class="page-link">Atras</a>
                            </li>
                            <li class="paginate_button page-item active">
                                <a href="#" aria-controls="data-table-default" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                            </li>
                            @*<li class="paginate_button page-item ">
                                    <a href="#" aria-controls="data-table-default" data-dt-idx="2" tabindex="0" class="page-link">2</a>
                                </li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="data-table-default" data-dt-idx="3" tabindex="0" class="page-link">3</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="data-table-default" data-dt-idx="4" tabindex="0" class="page-link">4</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="data-table-default" data-dt-idx="5" tabindex="0" class="page-link">5</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="data-table-default" data-dt-idx="6" tabindex="0" class="page-link">6</a></li>*@
                            <li class="paginate_button page-item next" id="data-table-default_next"><a href="#" aria-controls="data-table-default" data-dt-idx="7" tabindex="0" class="page-link">Siguiente</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end panel-body -->
</div>

@section links{
    <link href="~/Content/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/assets/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/Content/scripts/Script_Rutina.js"></script>
}











@{
    ViewBag.Title = "Comidas";
}

<h2>Comidas</h2>

<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <h4 class="panel-title">Lista de Comidas</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            @*<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>*@
        </div>
    </div>
    <!-- end panel-heading -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <div id="data-table-default_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-11 col-md-11">
                </div>
                <div class="col-sm-1 col-md-1 m-b-15">
                    <a id="btn_agregar" class="btn btn-sm btn-success" data-toggle="modal" style="margin-bottom: 15px;">AGREGAR</a>
                </div>
                <!-- modal agregar -->
                <div class="modal show" id="modal_agregarcomida">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Agregar Comidas</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Nombre</label>
                                    <div class="col-md-9">
                                        <input type="text" id="txt_nombre" class="form-control m-b-5" placeholder="Ingresar el nombre de la comida">
                                        @*<small class="f-s-12 text-grey-darker">We'll never share your email with anyone else.</small>*@
                                    </div>
                                </div>
                                <hr class="wide">
                                <div class="form-group row m-b-10">
                                    <label class="col-lg-3 col-form-label">ALIMENTO</label>
                                    <div class="col-lg-8">
                                        <select class="default-select2 form-control" id="select2-alimento">
                                        </select>
                                    </div>
                                    <div class="col-lg-1">
                                        <button type="button" id="btn_agregardetalle" class="btn btn-green m-r-5 m-b-5">+</button>
                                    </div>
                                </div>  
                                <div class="form-group row m-b-10">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered dataTable" id="tabla_detalle">
                                            <thead>
                                                <tr>
                                                    <th width="19%" rowspan="1" colpan="1">Alimento
                                                    </th>
                                                    <th width="19%" rowspan="1" colpan="1">Prote.
                                                    </th>
                                                    <th width="19%" rowspan="1" colpan="1">Carbo.
                                                    </th>
                                                    <th width="19%" rowspan="1" colpan="1">Grasa
                                                    </th>
                                                    <th width="19%" rowspan="1" colpan="1">Cal.
                                                    </th>
                                                    <th width="4%" rowspan="1" colpan="1">Opc.
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group row m-b-10">
                                    <label class="col-form-label col-md-3">Proteinas: <span id="txt_totalproteinas"></span></label>
                                    <label class="col-form-label col-md-3">Carbohidratos: <span id="txt_totalcarbohidratos"></span></label>
                                    <label class="col-form-label col-md-3">Grasa: <span id="txt_totalgrasas"></span></label>
                                    <label class="col-form-label col-md-3"><b>Calorias: <span id="txt_totalcalorias"></span></b></label>
                                </div>                               
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btn_guardar" class="btn btn-green">GUARDAR</button>
                                <button type="button" id="btn_modificar" class="btn btn-green">ACTUALIZAR</button>
                                <a href="javascript:;" class="btn btn-white" data-dismiss="modal">CANCELAR</a>
                            </div>
                        </div>
                            
                    </div>
                </div>
                <!-- fin modal -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table id="tabla_comida" class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr role="row">
                                <th width="3%">N°</th>
                                <th>Comida</th>
                                <th>Proteinas</th>
                                <th>Carbohidratos</th>
                                <th>Grasa </th>
                                <th>Calorias</th>
                                <th>Opc.</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end panel-body -->
</div>

@section links{
    <link href="~/Content/assets/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/assets/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/plugins/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/scripts/Script_Comida.js"></script>
}